doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Music Player
        link(rel="stylesheet" href='/css/styles.css')
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link( rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
        script(src='/js/index.js' defer)
    body
        include _loggedInNav.pug

        p.welcome= `Hello! ${user.username}`
        p.welcome.
            Songs You Might Be Interested In
        
        table.music__interest
            thead.music__interest__header
                th.music__interest__body.
                    ID
                th.music__interest__body.
                    Title
                th.music__interest__body.
                    Release Date
                th.music__interest__body.
                    Actions
            tbody
                tr.music__interest__body
                    td.music__interest__body.
                        Row 1 Column 1
                    td.music__interest__body.
                        Row 1 Column 2
                    td.music__interest__body.
                        Row 1 Column 3
                    td.music__interest__body
                        button.
                            Add
                        button.
                            Remove

                tr.music__interest__body
                    td.music__interest__body.
                        Row 2 Column 1
                    td.music__interest__body.
                        Row 2 Column 2
                    td.music__interest__body.
                        Row 2 Column 3
                    td.music__interest__body
                        button.
                            Add
                        button.
                            Remove
                tr.music__interest__body
                    td.music__interest__body.
                        Row 3 Column 1
                    td.music__interest__body.
                        Row 3 Column 2
                    td.music__interest__body.
                        Row 3 Column 3
                    td.music__interest__body
                        button.
                            Add
                        button.
                            Remove
                tr.music__interest__body
                    td.music__interest__body.
                        Row 4 Column 1
                    td.music__interest__body.
                        Row 4 Column 2
                    td.music__interest__body.
                        Row 4 Column 3
                    td.music__interest__body
                        button.
                            Add
                        button.
                            Remove
        div(class="container")
            h2(id="music-title").
                Hello
            h3(id="music-artist").
                Adele

            div(class="player-progress" id="player-progress")
                div(class="progress" id="progress")
                div(class="music-duration")
                    span(id="current-time").
                        0:00
                    span(id="duration").
                        0:00

            div(class="player-controls")
                i(class="fa-solid fa-backward" title="Previous" id="prev")
                i(class="fa-solid fa-play play-button" title="Play" id="play")
                i(class="fa-solid fa-forward" title="Next" id="next")
